<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="super_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:fontFamily">@font/seguisb</item>
        <item name="android:background">@drawable/round_corners_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="super_button_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>

        <item name="android:background">@drawable/round_corners_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="login_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:autofillHints" tools:targetApi="o" />
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="input_details_style" parent="login_style">
        <item name="android:background">@drawable/round_corners_shape_empty</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:autofillHints" tools:targetApi="o" />
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="subtitle">
        <item name="android:fontFamily">@font/segoeuisl</item>
        <item name="android:textColor">#E8E6E6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detailed_description">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>